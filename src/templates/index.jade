mixin sec(key, title)
	section(id=key,"data-section-id"=key,data-outline="")
		h2.section-header= title
		block


mixin workplace(model)
	header
		h3(data-outline="").inline-header.workplace= model.company
		if model.note
			small  (#{model.note})
		span.location= model.location
		span.duration= model.duration
	if model.positions
		ul.stealth-list
			each position in model.positions
				li
					+position(position)


mixin position(model)
	h4(data-outline="").inline-header= model.title
	if model.duration
		span.duration= model.duration
	if model.responsibilities
		ul
			each responsibility in model.responsibilities
				li= responsibility
	if model.accomplishments
		p.accomplishments= model.accomplishments


mixin list(array)
	if array && array.length
		ul.column-list
			each element in array
				li= element


doctype html
html
	head
		<!--[if lt IE 9]>
			script(src="vendor/html5shiv.js")
		<![endif]-->
		title #{name} — Résumé
		link(rel="stylesheet", href="styles/style.css")
		link(rel="stylesheet", href="styles/font-awesome/css/font-awesome.min.css")
	body("data-ng-app"="wynn","data-ng-controller"="outlineController","data-ng-class"="{'menu-active':model.menu}")
		div
			nav.outline.ng-cloak
				ul('data-ng-click'="model.menu = false")
					li('data-ng-repeat'="section in model.docOutline")
						a(data-ng-href="#{{section.id}}") {{section.label}}
			div.page-wrap("data-outline"="model.docOutline")
				header.main-header
					button.menu-button('data-ng-click'='model.menu = !model.menu')
						i.fa.fa-arrow-circle-right('aria-hidden'=true)
					h1.name= name
					address.contact-info
						ul.stealth-list.compact-list('data-ng-if'='model.address')
							li('data-ng-repeat'='line in model.address') {{line}}<br>
						dl.inline.compact-list
							dt(data-ng-if='model.phone',title="Phone")
								i.fa.fa-phone-square('aria-hidden'=true)
							dd(data-ng-if='model.phone') {{model.phone}}
							dt(title="Email")
								i.fa.fa-envelope('aria-hidden'=true)
							dd: a(href="mailto:" + contact.email)= contact.email
				main
					+sec("summary", "Summary")
						p= summary
					+sec("strengths", "Key Strengths")
						ul
							each strength in strengths
								li= strength
					+sec("competencies", "Core Competencies")
						+list(competencies)
					+sec("history", "Work History")
						ol.stealth-list
							each workplace in history
								li
									+workplace(workplace)
					+sec("education", "Education")
						dl
							each school in education
								dt
									span.label= school.name
									span.location= school.location
								dd= school.education
					+sec("training", "Training")
						+list(training)
					+sec("software", "Software Experience")
						+list(software)
					+sec("skills", "Specific Skills")
						+list(skills)
				footer.references
					small References supplied upon request
		<!--[if gt IE 8]><!-->
		script(src="vendor/angular.min.js")
		script(src="scripts/index.js")
		<!--<![endif]-->